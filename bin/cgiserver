#! /bin/bash

USAGE='cgiserver [ -d | --dir ] [ -h | --help ]'

read REQUEST_METHOD FILE_NAME http_version
while [ $# -gt 0 ]
do
	case "$1" in
		--check-static)
			shift
			if [ -f "$1$FILE_NAME" ]
			then
				read request_line
				while [ `echo -e "$request_line" | tr -d "\r\n" | wc -c` -gt 0 ]
				do
					read request_line
				done
				echo 'HTTP/1.1 200 OK'
				echo -n 'ContentType: '
				mimetype "$1$FILE_NAME"
				echo ''
				cat "$1$FILE_NAME"
				exit 0
			fi
		;;
		-d|--dir)
			shift
			DOCUMENT_ROOT="$1"
		;;
		-h|--help)
			echo "$USAGE"
			exit 0
		;;
		*)
			echo "Invalid option: $1"
			echo "$USAGE"
			exit 1
		;;
	esac
	shift
done

read request_line
while [ `echo -e "$request_line" | tr -d "\r\n" | wc -c` -gt 0 ]
do
	read request_line
	[[ "$request_line" =~ ^Content-Length: ]] && export CONTENT_LENGTH=`echo "$request_line" | cut -d: -f 2 | tr -d '\r\n '`
done
export GATEWAY_INTERFACE='CGI/1.1'
$DOCUMENT_ROOT$FILE_NAME
